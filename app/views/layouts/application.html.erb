<!DOCTYPE html>
<html>
  <head>
    <title>Roadworks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'https://use.typekit.net/nrw2ooo.css' %>

    <% if signed_in? %>
      <script>
        window.currentUser = {
          user_id: <%= current_user.id %>,
          email: "<%= current_user.email %>",
          role: "<%= current_user.role %>",
        };
      </script>
    <% end %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= yield %>

  </body>
</html>
